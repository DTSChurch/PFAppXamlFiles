{% assign favoriteType = PageParameter.FavoriteType %}

<StackLayout Orientation="Horizontal" HorizontalOptions="Center" >

{% if favoriteType == "Sermons" or favoriteType == null  %}
     <Rock:StyledView BackgroundColor="{Rock:PaletteColor App-Primary}"
          CornerRadius="0,0,0,0"
          IsClippedToBounds="true"
          HorizontalOptions="FillAndExpand"
          HeightRequest="30" >
     <Button Text="Sermons"
          StyleClass="btn,page-menu-active"
          Margin="0"
          Command="{Binding ReplacePage}"
          CommandParameter="fc59df18-d01c-484f-bab1-b40b0ec058e4?FavoriteType=Sermons" />
     </Rock:StyledView>
{%else%}
     <Rock:StyledView BackgroundColor="{Rock:PaletteColor App-Dark}"
          CornerRadius="0,0,0,0"
          IsClippedToBounds="true"
          HorizontalOptions="FillAndExpand"
          HeightRequest="30" >
     <Button Text="Sermons"
          StyleClass="btn,page-menu"
          Margin="0"
          Command="{Binding ReplacePage}"
          CommandParameter="fc59df18-d01c-484f-bab1-b40b0ec058e4?FavoriteType=Sermons" />
     </Rock:StyledView>
{%endif%}

{% if favoriteType == "PopUpEvents" %}
     <Rock:StyledView BackgroundColor="{Rock:PaletteColor App-Primary}"
          CornerRadius="0,0,0,0"
          IsClippedToBounds="true"
          HorizontalOptions="FillAndExpand"
