          HeightRequest="30" >
     <Button Text="Pop-Up Events"
          StyleClass="btn,page-menu"
          Margin="0"
          Command="{Binding ReplacePage}"
          CommandParameter="fc59df18-d01c-484f-bab1-b40b0ec058e4?FavoriteType=PopUpEvents" />
     </Rock:StyledView>
{%endif%}

{% if favoriteType == "ActionTeams" %}
     <Rock:StyledView BackgroundColor="{Rock:PaletteColor App-Primary}"
          CornerRadius="0,0,0,0"
