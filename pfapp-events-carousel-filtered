            {% if forloop.last %}{{ closeCurly -}}{% else %}{{ closeCurly | Append:', ' -}}{%- endif -%}
             {% endif %}
            {%- endfor -%}
        ]
    {%- endcapture -%}

    {% endeventcalendaritem %}
    <StackLayout.Resources>
        <Rock:FromJson x:Key="Events">
            {}{{ eventJSON | XamlWrap }}
        </Rock:FromJson>
    </StackLayout.Resources>
